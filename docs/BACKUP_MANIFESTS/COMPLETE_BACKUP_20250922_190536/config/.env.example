# AI-HRMS-2025 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL database connection
DATABASE_URL=postgresql://username:password@localhost:5432/ai_hrms_2025
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_hrms_2025
DB_USER=your_username
DB_PASSWORD=your_password

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# AI PROVIDERS (Optional - System works without these)
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama Local AI (Optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# ===========================================
# VECTOR DATABASE (Optional)
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_PREFIX=ai_hrms

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=ai-hrms@example.com

# ===========================================
# SECURITY & RATE LIMITING
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_APP_NAME=AI-HRMS-2025

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================
ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=your-ga-id

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================
DEBUG_AI_PROVIDERS=false
ENABLE_SWAGGER_DOCS=true
ENABLE_CORS_ALL_ORIGINS=true

# ===========================================
# PRODUCTION SETTINGS (Override in production)
# ===========================================
# NODE_ENV=production
# ENABLE_CORS_ALL_ORIGINS=false
# JWT_EXPIRES_IN=1h
# LOG_LEVEL=warn