{
  "name": "ai-hrms-2025",
  "version": "2.0.0",
  "description": "Enterprise-grade AI-powered Human Resource Management System with predictive analytics, multi-tenant architecture, and advanced recruitment tools",
  "main": "server.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:ai": "jest --testPathPattern=ai",
    "test:templates": "jest --testPathPattern=template",
    "test:templates:performance": "jest tests/templatePerformance.test.js --verbose",
    "test:templates:runner": "node tests/templateRunner.js",
    "test:testsprite": "node tests/testsprite.runner.js",
    "lint": "echo 'Linting not configured yet - please add ESLint' && exit 0",
    "lint:fix": "echo 'Lint fix not configured yet - please add ESLint' && exit 0",
    "format": "echo 'Formatting not configured yet - please add Prettier' && exit 0",
    "format:check": "echo 'Format check not configured yet - please add Prettier' && exit 0",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend:dev": "webpack serve --mode development",
    "frontend:build": "webpack --mode production",
    "build": "npm run frontend:build",
    "env:migrate": "node scripts/migrate-environments.js",
    "env:setup": "node scripts/quick-env-setup.js",
    "env:validate": "node scripts/validate-env-setup.js",
    "project:monitor": "node scripts/project-management/progress-monitor.js",
    "project:sprint": "node scripts/project-management/sprint-tracker.js",
    "project:dashboard": "node scripts/project-management/project-dashboard.js",
    "project:status": "npm run project:monitor && npm run project:dashboard",
    "dev:setup": "node scripts/dev-setup/initialize-development.js",
    "dev:validate": "node scripts/dev-setup/validate-environment.js",
    "service:init": "node scripts/service-data/init-service-infrastructure.js",
    "service:sync-skills": "node scripts/service-data/populate-skills-taxonomy.js",
    "service:sync-jobs": "node scripts/service-data/populate-job-framework.js",
    "service:ai-enhance": "node scripts/service-data/ai-enhancement.js",
    "service:quality-check": "node scripts/service-data/data-quality-check.js",
    "seed:templates": "node scripts/seed-template-data.js",
    "seed:templates:undo": "node scripts/seed-template-data.js undo",
    "seed:templates:status": "node scripts/seed-template-data.js status"
  },
  "keywords": [
    "hr",
    "hrms",
    "human-resources",
    "ai",
    "machine-learning",
    "predictive-analytics",
    "recruitment",
    "ats",
    "cv-parsing",
    "skills-matching",
    "multi-tenant",
    "saas",
    "nodejs",
    "react",
    "postgresql",
    "vector-database",
    "openai",
    "anthropic",
    "enterprise"
  ],
  "author": "AI-HRMS-2025 Development Team",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.117",
    "@anthropic-ai/sdk": "^0.62.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@huggingface/inference": "^4.8.0",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^8.11.2",
    "@qdrant/js-client-rest": "^1.15.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "fast-csv": "^5.0.5",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "i18n": "^0.15.1",
    "i18next": "^25.5.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.10.0",
    "moment": "^2.30.1",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "natural": "^8.1.0",
    "nltk": "^0.0.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^5.20.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.1",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "string-similarity": "^4.0.4",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "style-loader": "^4.0.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "xlsx": "^0.18.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/utils/logger.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000,
    "verbose": true
  }
}
